<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">

    <ScrollView android:layout_width="fill_parent" android:layout_height="0dip" android:layout_weight="1" android:scrollbarStyle="outsideOverlay" android:fadingEdge="none" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/calendar_spinner_label" android:text="@string/calendar_spinner_label" android:gravity="right|top" android:paddingRight="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Spinner android:id="@+id/calendars" android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawSelectorOnTop="true" />

            <TextView android:id="@+id/output" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="false" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingTop="5dip" android:paddingLeft="4dip" android:paddingRight="4dip" android:paddingBottom="1dip" android:background="@android:drawable/bottom_bar" >
        <Button android:id="@+id/import_button" android:layout_width="0dip" android:layout_height="fill_parent" android:layout_weight="1" android:text="@string/import_label" />
        <Button android:id="@+id/cancel_button" android:layout_width="0dip" android:layout_height="fill_parent" android:layout_weight="1" android:text="@android:string/cancel" />
    </LinearLayout>
        
</LinearLayout>
